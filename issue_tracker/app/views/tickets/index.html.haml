%h1 Listing tickets

%table
  %tr
    %th Subject
    %th Text
    %th Department
    %th Status
    %th Ownership
    %th Customer
    %th Unique
    %th
    %th
    %th

  - @tickets.each do |ticket|
    %tr
      %td= ticket.subject
      %td= ticket.text
      %td= ticket.department
      %td= ticket.status
      %td= ticket.ownership
      %td= ticket.customer_id
      %td= ticket.unique
      %td= link_to 'Show', ticket
      %td= link_to 'Edit', edit_ticket_path(ticket)
      %td= link_to 'Destroy', ticket, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

