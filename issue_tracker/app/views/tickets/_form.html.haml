= form_for @ticket do |f|
  - if @ticket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ticket.errors.count, "error")} prohibited this ticket from being saved:"
      %ul
        - @ticket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :department
    = f.text_field :department
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :ownership
    = f.text_field :ownership
  .field
    = f.label :customer_id
    = f.text_field :customer_id
  .field
    = f.label :unique
    = f.text_field :unique
  .actions
    = f.submit 'Save'
